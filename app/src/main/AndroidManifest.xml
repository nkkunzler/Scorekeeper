<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webs.au3io.scorekeeper"
    android:versionCode="4"
    android:versionName="1.1.1">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HomeScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Games.BeanBagToss"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Games.BocceBall"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Games.Washers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Games.LadderGolf"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WinnerScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Games.Horseshoes"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InformationScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InfoScreen"
            android:label="@string/title_activity_info_screen"></activity>
    </application>

</manifest>